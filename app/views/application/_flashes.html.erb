<% if !flash.empty? %>
  <div id="flash">
    <% flash.each do |key, value| %>
      <div class="<%= flash_class(key) %>" role="alert" title="<%= key.to_s.humanize %>">
        <button class="close" data-dismiss="alert" type="button">
          <span aria-hidden="true">&times;</span>
          <span class="sr-only">Close</span>
        </button>
        <p>
          <%= value %>
        </p>
      </div>
    <% end %>
  </div>
<% end %>
